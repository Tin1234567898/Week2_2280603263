@model Week2_2280603263.Models.Product

<h2>Edit Product</h2>

<form asp-action="Update" enctype="multipart/form-data">
    <!-- Cần enctype để tải file -->
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <!-- Hiển thị ảnh hiện tại -->
    <div class="form-group">
        <label>Current Image</label>
        <div>
            <img src="@Model.ImageUrl" alt="Product Image" style="width: 150px; height: auto; border-radius: 5px;" />
        </div>
    </div>

    <!-- Input để chọn ảnh mới -->
    <div class="form-group">
        <label>Upload New Image</label>
        <input type="file" name="ImageFile" class="form-control-file" />
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
</form>
